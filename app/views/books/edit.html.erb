<!-- 編集画面の作成 -->
<h1>Editing Book</h1>

<!-- Title、Bodyが正しく入力されなかったときの処理 -->
<% if @books.errors.any? %>
  <%= @books.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @books do |f| %>

<!--　Title欄作成 -->
<h4>Title</h4>
<%= f.text_field :title %>

<!-- Body欄作成-->
<h4>Body</h4>
<%= f.text_area :body %>

<!-- Update Bookボタン作成 -->
<br>
<%= f.submit 'Update Book' %>
</br>

<p>
  <%= link_to "Show", book_path(@books) %> | <a href = "/books">Back</a>
</p>

<% end %>